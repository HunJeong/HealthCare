<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragement.InformationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Muscle Load"
                    android:id="@+id/muscleLoadTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/muscleLoadGaugeTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="MA/min"
                    android:id="@+id/muscleLoadUnitTextView" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Heart Rate"
                    android:id="@+id/heartRateTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/heartRateGauge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="bpm"
                    android:id="@+id/heartRateUnitTextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Cadence"
                    android:id="@+id/cadenceTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/cadenceGagueTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="rpm"
                    android:id="@+id/cadenceUnitTextView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Speed"
                    android:id="@+id/speedTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/speedGaugeTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="km/h"
                    android:id="@+id/speedUnitTextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Ratio Q/H"
                    android:id="@+id/ratioTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/ratioGagueTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="%"
                    android:id="@+id/ratioUnitTextView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#ffff087f"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="Balance"
                    android:id="@+id/balanceTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:id="@+id/balanceGaugeTextView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:text="%"
                    android:id="@+id/balanceUnitTextView" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
